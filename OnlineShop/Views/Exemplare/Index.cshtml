
<br />
<h2 class="text-center">Lista exemplare</h2>
<br />



@if (TempData.ContainsKey("message"))
{
	<h1>@ViewBag.message</h1>
}

<br />

<div class="align-items-center justify-content-center d-flex">
	<a class="btn btn-success" href="/Exemplare/New">Adauga un nou exemplar</a>
</div>

<br />

@foreach (var exemplar in ViewBag.Exemplare)
{
	@Html.Label("Titlu", "Titlu exemplar")
	@foreach (var produs in ViewBag.Produse)
	{
		@if(produs.Id == exemplar.ProdusId)
		{
			<p>@produs.Titlu</p>
		}
	}

	@Html.Label("Numar", "Numar exemplar")
	<p>@exemplar.Numar_Produs</p>

	@Html.Label("Stare", "Stare exemplar")
	<p>@exemplar.Stare</p>

	@if (exemplar.ComandaId != null)
	{
		@Html.Label("ComandaId", "Comanda exemplar")
		<p>@exemplar.ComandaId</p>
	}

	<a class="btn alert-success" href="/Exemplare/Show/@exemplar.ProdusId/@exemplar.Numar_Produs">Afisare exemplar</a>

	@if (User.IsInRole("Administrator"))
	{
		<a class="btn alert-success" href="/Exemplare/Edit/@exemplar.ProdusId/@exemplar.Numar_Produs">Editare exemplar</a>
	}
	<br />
	<hr />
	<br />
}
<br />