@model OnlineShop.Models.Produs

<img src="../css/os-views-bg.png" class="comenzi-body" />
<br />

<h2>Editare produs</h2>


@using (Html.BeginForm(controllerName: "Produse", actionName: "Edit", method: FormMethod.Post, routeValues: new { id = Model.Id }))
{
	@Html.Label("Titlu", "Titlu produs")
	<br />
	@Html.Editor("Titlu")
	@Html.ValidationMessageFor(m => m.Titlu, null, new { @class = "text-danger" })
	<br />
	<br />


	@Html.Label("Descriere", "Descriere produs")
	<br />
	@Html.Editor("Descriere")
	@Html.ValidationMessageFor(m => m.Descriere, null, new { @class = "text-danger" })
	<br />
	<br />


	@Html.Label("Pret", "Pret produs")
	<br />
	@Html.Editor("Pret")
	@Html.ValidationMessageFor(m => m.Pret, null, new { @class = "text-danger" })
	<br />
	<br />


	@Html.Label("Poza", "Poza produs")
	<br />
	@Html.Editor("Poza")
	@Html.ValidationMessageFor(m => m.Poza, null, new { @class = "text-danger" })
	<br />
	<br />


	@Html.Label("Rating", "Rating produs")
	<br />
	@Html.Editor("Rating")
	@Html.ValidationMessageFor(m => m.Rating, null, new { @class = "text-danger" })
	<br />
	<br />


	@Html.Label("CategorieId", "Categorie produs")
	<br />
	@Html.Editor("CategorieId")
	@Html.ValidationMessageFor(m => m.CategorieId, null, new { @class = "text-danger" })
	<br />
	<br />


	<button class="btn btn-success rounded-pill" type="submit">Modifica produsul</button>
}