@{
	ViewBag.Titlu = "Lista review-uri";
}
<br />
<h2 class="text-center">@ViewBag.Titlu</h2>
<br />

@if (TempData.ContainsKey("message"))
{
	<h1>@ViewBag.message</h1>
}

<br />

<div class="align-items-center justify-content-center d-flex">
	<a class="btn btn-success" href="/Reviewuri/New">Adauga un nou review</a>
</div>

<br />

@foreach (var review in ViewBag.Reviewuri)
{
	@Html.Label("Nume", "Review utilizator")
	<p>@review.Utilizator.Nume @review.Utilizator.Prenume</p>

	@Html.Label("Titlu ", "Review produs")
	<p>@review.Produs.Titlu</p>

	@Html.Label("Rating", "Review rating")
	@for (int i = 1; i <= 5; ++i)
	{
		@if (i <= review.Rating)
		{
			// Stele aurii
			// De pus inline-block
			<img src="" />
		}
		else
		{
			// Stele gri
			// De pus inline-block
			<img src="" />
		}
	}

	@Html.Label("Continut", "Continut review")
	<p>@review.Continut</p>
	

	<a class="btn alert-success" href="/Reviewuri/Show/@review.Id">Afisare review</a>

	@if (ViewBag.userManager.GetUserId(User) == review.UtilizatorId || User.IsInRole("Administrator"))
	{
		<a class="btn alert-success" href="/Reviewuri/Edit/@review.Id">Editare review</a>
	}
	
	<br />
	<hr />
	<br />
}
<br />
